<% layout('layouts/boilerplate')%>
    <h1>Edit <%=ngoView.ngoName%></h1>

    <div>

        <form action="/show/<%=ngoView._id%>?_method=PUT" method="post">
            <div class="mb-3">
                <label for="" class="form-lable">Ngo Name</label>
                <input type="text" class="form-control" id="ngoname" name="ngo[ngoName]" value="<%=ngoView.ngoName%>" >
            </div>
            <div class="mb-3">
                <label for="" class="form-lable">Directors(, separated)</label>
                <input type="text" class="form-control" id="directors" name="ngo[directors]" value="<%=ngoView.directors%>" >
            </div>
            <div class="mb-3">
                <label for="" class="form-lable">Location</label>
                <input type="text" class="form-control  id="location" name="ngo[location]" value="<%=ngoView.location%>" >
            </div>
            <div class="mb-3">
                <button class="btn btn-success">update ngo</button>
            
        </form>
    </div>
    <div class="btn btn-warning">
            <a href="/show" class="text-style-none">All Ngos</a>
    </div>

